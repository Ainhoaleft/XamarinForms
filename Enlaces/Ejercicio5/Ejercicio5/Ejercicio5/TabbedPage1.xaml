<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio5.TabbedPage1">
    <ContentPage Title="Datos">
        <ScrollView>
            <StackLayout Padding="5">
                <Image  HeightRequest="200"/>
                <StackLayout Orientation="Horizontal">
                    <Label Text="{Binding Nacionalidad}" FontSize="24"/>
                    <Label Text=" - " FontSize="24"/>
                    <Label Text="{Binding Anyo}" FontSize="24"/>
                </StackLayout>
                <Label Text="{Binding Descripcion}" FontSize="24"/>
            </StackLayout>
        </ScrollView>
    </ContentPage>
    <ContentPage Title="Actores">
        <ListView ItemsSource="{Binding Actores}"></ListView>
    </ContentPage>
</TabbedPage>