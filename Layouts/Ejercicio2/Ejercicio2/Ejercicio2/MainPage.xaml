<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio2.MainPage">

    <StackLayout Padding="5">
        <StackLayout Orientation="Horizontal">
            <Label Text="Fuente:" HorizontalOptions="Start" FontSize="24" VerticalOptions="Center"/>
            <Entry HorizontalOptions="FillAndExpand" x:Name="eTamanyo"/>
            <Button Text="Cambiar" HorizontalOptions="End" FontSize="24" Clicked="CambiarClicked"/>
        </StackLayout>
        <Label Text="Películas" FontAttributes="Bold" FontSize="24"/>
        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout x:Name="slPeliculas"/>
        </ScrollView>
        <StackLayout Orientation="Horizontal">
            <Entry x:Name="eTitulo" HorizontalOptions="FillAndExpand"/>
            <Button Clicked="AnyadirClicked" Text="Añadir" HorizontalOptions="End" FontSize="24"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
